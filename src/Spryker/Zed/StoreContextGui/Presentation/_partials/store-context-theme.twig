{% block store_context_set_widget %}
    <div class="panel panel-default store-context-item">
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-12">
                    {{ form_row(form.application) }}
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    {{ form_row(form.timezone) }}
                </div>
            </div>

            {{ form_rest(form) }}
        </div>
        <div class="panel-footer">
            <button class="btn btn-outline safe-submit btn-remove remove-store-context m-b-sm">
                <i class="fa fa-trash"></i> {{ 'Delete store context' | trans }}
            </button>
        </div>
    </div>
{% endblock %}
